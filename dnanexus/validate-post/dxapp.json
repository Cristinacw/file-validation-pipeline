{
  "name": "validate-post",
  "title": "Validate and Post files",
  "summary": "Validate ENCODED pipeline files and POST to encodeD",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "categories": [
    "Encode"
  ],
  "inputSpec": [
    {
      "name": "pipe_file",
      "label": "File to validate",
      "class": "file",
      "optional": false
    },
    {
      "name": "file_meta",
      "label": "encodeD file object to post",
      "class": "hash",
      "optional": false
    },
    {
      "name": "key",
      "label": "ENCODEd key for access (test, default, www)",
      "class": "string",
      "optional": true,
      "default": "default"
    },
    {
      "name": "debug",
      "label": "debug",
      "class": "boolean",
      "optional": true
    },
    {
      "name": "skipvalidate",
      "label": "Skip Validation (careful!)",
      "class": "boolean",
      "optional": false
    }
  ],
  "outputSpec": [
    {
      "name": "report",
      "label": "validateFiles report",
      "class": "file",
      "optional": true
    },
    {
      "name": "accession",
      "label": "new file accession",
      "class": "string"
    },
    {
      "name": "validation",
      "label": "validation errors",
      "class": "string"
    }
  ],
  "runSpec": {
    "interpreter": "python2.7",
    "file": "src/validate-post.py",
    "execDepends": [
      {
          "name":"dxencode",
          "package_manager": "git",
          "url": "https://github.com/ENCODE-DCC/dxencode.git",
          "destdir": "/home/dnanexus",
          "tag": "submit"
      },
      {"name": "awscli", "package_manager": "pip"}
    ]
  },
  "access": {
    "project": "CONTRIBUTE",
    "network": [
      "*"
    ]
  },
  "authorizedUsers": []
}
